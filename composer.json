{
    "name"         : "jbzoo/event",
    "type"         : "library",
    "description"  : "Library for event-based development",
    "license"      : "MIT",
    "keywords"     : [
        "JBZoo", "events", "event-manager", "eventmanager", "listener", "hook", "signal", "observer", "emit", "emitter"
    ],

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"     : "Evert Pot",
            "email"    : "me@evertpot.com",
            "homepage" : "https://sabre.io/event/"
        }
    ],

    "require"      : {
        "php" : ">=7.4"
    },

    "require-dev"  : {
        "jbzoo/utils"       : ">=4.5.5",
        "jbzoo/toolbox-dev" : "^4.0.1"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\Event\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "3.x-dev"
        }
    }
}
