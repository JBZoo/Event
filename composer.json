{
    "name"         : "jbzoo/event",
    "type"         : "library",
    "description"  : "Library for event-based development",
    "license"      : "MIT",
    "keywords"     : [
        "JBZoo",
        "events",
        "event-manager",
        "eventmanager",
        "listener",
        "hook",
        "signal",
        "observer",
        "emit",
        "emitter"
    ],

    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"     : "Evert Pot",
            "email"    : "me@evertpot.com",
            "homepage" : "https://sabre.io/event/"
        }
    ],

    "require"      : {
        "php" : "^8.1"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev" : "7.x-dev"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\Event\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : [
            "tests"
        ]
    },

    "config"       : {
        "optimize-autoloader" : true
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
